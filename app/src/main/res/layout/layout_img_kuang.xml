<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/font_160"
    android:layout_height="@dimen/font_60">

    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/font_2"
        android:background="@drawable/kuang" />

    <com.homechart.app.myview.RoundImageView
        android:layout_width="@dimen/font_4"
        android:layout_height="@dimen/font_4"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="true"
        android:background="@color/white" />

    <com.homechart.app.myview.RoundImageView
        android:layout_width="@dimen/font_4"
        android:layout_height="@dimen/font_4"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:background="@color/white" />

    <com.homechart.app.myview.RoundImageView
        android:layout_width="@dimen/font_4"
        android:layout_height="@dimen/font_4"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@color/white" />

    <com.homechart.app.myview.RoundImageView
        android:layout_width="@dimen/font_4"
        android:layout_height="@dimen/font_4"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@color/white" />

</RelativeLayout>