<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <ImageView
        android:id="@+id/iv_imageview_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/font_10"
        android:layout_marginRight="@dimen/font_10"
        android:scaleType="fitXY" />
    <View
        android:id="@+id/view_test"
        android:layout_width="match_parent"
        android:layout_height="@dimen/font_10"
        android:layout_marginTop="@dimen/font_10"
        android:layout_below="@+id/iv_imageview_one"
        android:background="@color/bg_f2f2f2" />

    <View
        android:id="@+id/view_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/font_10"
        android:layout_below="@+id/view_test" />
</RelativeLayout>
