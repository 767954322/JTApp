<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_40">


    <include
        android:id="@+id/common_navbar"
        layout="@layout/view_navigation_header" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@+id/common_navbar"
        android:layout_marginBottom="@dimen/font_230"
        android:background="@color/bg_4d000000">

        <com.homechart.app.croplayout.EditPhotoViewMore
            xmlns:crop="http://schemas.android.com/apk/res-auto"
            android:id="@+id/photoedit_image_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/bg_4d000000"
            crop:crop_corner_color="@color/white"
            crop:crop_line_color="@color/touming"
            crop:crop_shadow_color="@color/bg_4d000000" />
    </FrameLayout>

</RelativeLayout>