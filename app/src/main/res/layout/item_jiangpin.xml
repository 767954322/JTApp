<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_tital"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/bg_707070"
        android:includeFontPadding="false"
        android:lineSpacingExtra="@dimen/font_8"
        android:layout_marginLeft="@dimen/font_15"
        android:textSize="@dimen/size_14" />

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/bg_707070"
        android:layout_toRightOf="@+id/tv_tital"
        android:includeFontPadding="false"
        android:lineSpacingExtra="@dimen/font_8"
        android:layout_marginLeft="@dimen/font_5"
        android:layout_marginRight="@dimen/font_15"
        android:layout_marginBottom="@dimen/font_8"
        android:textSize="@dimen/size_14" />



</RelativeLayout>
