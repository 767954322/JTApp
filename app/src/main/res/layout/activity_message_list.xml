<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_f7f7f7">


    <include
        android:id="@+id/common_navbar"
        layout="@layout/view_navigation_header" />


    <com.flyco.tablayout.SlidingTabLayout
        android:id="@+id/stl_tab"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@+id/common_navbar"
        android:background="#ffffff"
        app:tl_divider_color="@color/white"
        app:tl_divider_padding="13dp"
        app:tl_divider_width="1dp"
        app:tl_indicator_color="@color/bg_e79056"
        app:tl_indicator_height="1.5dp"
        app:tl_indicator_width_equal_title="true"
        app:tl_tab_padding="5dp"
        app:tl_tab_space_equal="true"
        app:tl_textBold="BOTH"
        app:tl_textSelectColor="@color/bg_262626"
        app:tl_textUnselectColor="@color/bg_8f8f8f"
        app:tl_underline_color="#1A000000"
        app:tl_underline_height="0dp" />

    <View
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/stl_tab"
        android:background="@color/view_line" />

    <com.flyco.tablayout.CustomViewPagerTab
        android:id="@+id/vp_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/view_line" />

</RelativeLayout>