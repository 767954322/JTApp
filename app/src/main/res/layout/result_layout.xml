<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/result_all"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/font_90">

    <!--action bar-->
    <RelativeLayout
        android:id="@+id/result_drag_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/font_56"
        android:gravity="center_vertical"
        android:background="@color/bg_4c4c4c">
        <TextView
            android:id="@+id/message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:textSize="@dimen/size_18"
            android:text="拖动收起"
            android:textColor="@color/white"/>
    </RelativeLayout>

    <!--result-->
    <LinearLayout
        android:background="@color/bg_8f8f8f"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/font_56"
        android:orientation="vertical">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/font_40"
            android:background="@color/gray_type_list">
            <it.sephiroth.android.library.widget.HListView
                android:id="@+id/category_list_view"
                android:layout_width="match_parent"
                android:paddingLeft="@dimen/font_5"
                android:paddingRight="@dimen/font_5"
                android:layout_height="match_parent"
                android:overScrollMode="never"
                android:listSelector="@color/white1"
                android:drawSelectorOnTop="false"/>
            <ImageView
                android:id="@+id/result_switch_button"
                android:layout_width="45dp"
                android:padding="5dp"
                android:visibility="gone"
                android:layout_height="match_parent"
                android:layout_gravity="right"/>
        </FrameLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <FrameLayout
                android:id="@+id/result_grid_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </FrameLayout>
            <TextView
                android:id="@+id/no_result_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                android:text="No Result found"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:color="@color/white"/>
            <!--Animation picture-->
            <ImageView
                android:id="@+id/result_loading"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="20dp"
                android:visibility="gone"
                android:src="@drawable/loading"
                android:layout_gravity="center_horizontal"/>
        </FrameLayout>
    </LinearLayout>

    <include layout="@layout/bottom_layout"/>

</FrameLayout>