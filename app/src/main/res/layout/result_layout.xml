<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/result_all"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/font_90">

    <!--action bar-->
    <RelativeLayout
        android:id="@+id/result_drag_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/font_56"
        android:gravity="center_vertical"
        android:background="@color/bg_4c4c4c">
        <TextView
            android:id="@+id/message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:textSize="@dimen/size_18"
            android:text="拖动收起"
            android:textColor="@color/white"/>
    </RelativeLayout>

    <!--result-->
    <RelativeLayout
        android:background="@color/bg_8f8f8f"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/font_56"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/rl_tab"
            android:layout_width="match_parent"
            android:layout_height="@dimen/font_60"
            android:gravity="center_vertical"
            android:background="@color/white">
            <it.sephiroth.android.library.widget.HListView
                android:id="@+id/category_list_view"
                android:layout_width="match_parent"
                android:layout_height="@dimen/font_30"
                android:paddingLeft="@dimen/font_10"
                app:hlv_dividerWidth="@dimen/font_7"
                android:layout_centerInParent="true"
                android:overScrollMode="never"/>
        </RelativeLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/rl_tab">
            <FrameLayout
                android:id="@+id/result_grid_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </FrameLayout>
            <ImageView
                android:id="@+id/result_loading"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="20dp"
                android:visibility="gone"
                android:src="@drawable/loading"
                android:layout_gravity="center_horizontal"/>
        </FrameLayout>
    </RelativeLayout>

    <include layout="@layout/bottom_layout"/>

</FrameLayout>