<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/text_view_border3">


    <RelativeLayout
        android:layout_width="@dimen/font_300"
        android:layout_height="@dimen/font_166"
        android:layout_centerInParent="true"
        android:background="@drawable/back_jubao"
        android:clickable="true">


        <TextView
            android:id="@+id/tv_quxiao"
            android:layout_width="@dimen/font_106"
            android:layout_height="@dimen/font_32"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/font_25"
            android:layout_marginLeft="@dimen/font_32"
            android:background="@drawable/jubao_close"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/bg_464646"
            android:textSize="@dimen/size_12" />

        <TextView
            android:id="@+id/tv_queren"
            android:layout_width="@dimen/font_106"
            android:layout_height="@dimen/font_32"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/font_25"
            android:layout_marginRight="@dimen/font_32"
            android:background="@drawable/jubao_sure"
            android:gravity="center"
            android:text="确认"
            android:textColor="@color/white"
            android:textSize="@dimen/size_12" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/tv_quxiao"
            android:layout_marginLeft="@dimen/font_32"
            android:layout_marginRight="@dimen/font_32">

            <TextView
                android:id="@+id/tv_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/bg_464646"
                android:layout_centerInParent="true" />

        </RelativeLayout>


    </RelativeLayout>


</RelativeLayout>
