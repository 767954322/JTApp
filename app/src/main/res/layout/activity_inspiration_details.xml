<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/id_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/common_navbar"
        layout="@layout/view_navigation_header" />

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/cl_coordinator"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/common_navbar">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay">

            <android.support.design.widget.CollapsingToolbarLayout
                android:id="@+id/collapsing_toolbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:contentScrim="?attr/colorPrimary"
                app:expandedTitleMarginEnd="64dp"
                app:expandedTitleMarginStart="48dp"
                app:layout_scrollFlags="scroll|exitUntilCollapsed|snap">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white">

                    <TextView
                        android:id="@+id/tv_inspiration_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/font_10"
                        android:layout_marginRight="@dimen/font_10"
                        android:layout_marginTop="@dimen/font_21"
                        android:text="你家的沙发有多好看？"
                        android:textColor="@color/bg_262626"
                        android:textSize="@dimen/size_18" />

                    <TextView
                        android:id="@+id/tv_inspiration_miaosu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_inspiration_name"
                        android:layout_marginBottom="@dimen/font_10"
                        android:layout_marginLeft="@dimen/font_10"
                        android:layout_marginRight="@dimen/font_10"
                        android:layout_marginTop="@dimen/font_21"
                        android:includeFontPadding="false"
                        android:lineSpacingExtra="@dimen/font_8"
                        android:text="你家的沙发有多好看？"
                        android:textColor="@color/bg_707070"
                        android:textSize="@dimen/size_14" />

                    <RelativeLayout
                        android:id="@+id/rl_top_check1"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/font_45"
                        android:layout_below="@+id/tv_inspiration_miaosu"
                        android:background="@color/white">

                        <RelativeLayout
                            android:id="@+id/rl_check_pic1"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true">

                            <TextView
                                android:id="@+id/tv_check_name1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="@dimen/font_10"
                                android:text="大图"
                                android:textColor="@color/bg_262626"
                                android:textSize="@dimen/size_10" />

                            <ImageView
                                android:id="@+id/iv_check_icon1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="@dimen/font_6"
                                android:layout_toLeftOf="@+id/tv_check_name1"
                                android:src="@drawable/pubuliu1" />


                        </RelativeLayout>

                    </RelativeLayout>


                </RelativeLayout>

                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:visibility="gone"
                    app:popupTheme="@style/AppTheme.PopupOverlay" />

            </android.support.design.widget.CollapsingToolbarLayout>

        </android.support.design.widget.AppBarLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/bg_f2f2f2"
            android:orientation="vertical"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <com.homechart.app.recyclerlibrary.recyclerview.HRecyclerView
                android:id="@+id/rcy_recyclerview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/bg_f2f2f2"
                android:paddingLeft="@dimen/font_5"
                android:paddingRight="@dimen/font_5"
                app:loadMoreEnabled="true"
                app:loadMoreFooterLayout="@layout/layout_hrecyclerview_load_more_footer_huodong"
                app:refreshEnabled="false"
                app:refreshHeaderLayout="@layout/layout_hrecyclerview_refresh_header" />

        </LinearLayout>

    </android.support.design.widget.CoordinatorLayout>

    <RelativeLayout
        android:id="@+id/rl_top_check"
        android:layout_width="match_parent"
        android:layout_height="@dimen/font_45"
        android:layout_below="@+id/common_navbar"
        android:background="@color/white"
        android:visibility="gone">

        <RelativeLayout
            android:id="@+id/rl_check_pic"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true">

            <TextView
                android:id="@+id/tv_check_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/font_10"
                android:text="大图"
                android:textColor="@color/bg_262626"
                android:textSize="@dimen/size_10" />

            <ImageView
                android:id="@+id/iv_check_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/font_6"
                android:layout_toLeftOf="@+id/tv_check_name"
                android:src="@drawable/pubuliu1" />


        </RelativeLayout>

    </RelativeLayout>


</RelativeLayout>
