<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/id_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_f2f2f2">

    <RelativeLayout
        android:id="@+id/rl_navr_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/font_50"
        android:background="@color/bg_f9"
        android:gravity="center_vertical">

        <RelativeLayout
            android:id="@+id/backButton_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/nav_left_imageButton"
                android:layout_width="@dimen/size_40"
                android:layout_height="@dimen/size_40"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/size_10"
                android:background="@drawable/transparent"
                android:padding="@dimen/size_8"
                android:scaleType="centerInside"
                android:src="@drawable/tital_back"
                android:visibility="visible" />

            <TextView
                android:id="@+id/nav_left_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:textSize="@dimen/font_17"
                android:visibility="gone" />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/font_10"
            android:layout_alignParentRight="true">


            <ImageButton
                android:id="@+id/nav_secondary_imageButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:background="@drawable/transparent"
                android:layout_alignParentLeft="true"
                android:padding="@dimen/size_8"
                android:src="@drawable/shared_icon"
                android:scaleType="centerInside" />

            <TextView
                android:id="@+id/tv_shoucang"
                android:layout_width="@dimen/font_56"
                android:layout_height="@dimen/font_28"
                android:textColor="@color/white"
                android:textSize="@dimen/size_12"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/nav_secondary_imageButton"
                android:background="@drawable/bt_shoucang"
                android:layout_marginLeft="@dimen/font_10"
                android:visibility="gone"
                android:gravity="center"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_tital_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/case_text_tital_name"
            android:textSize="@dimen/font_18" />

        <View
            android:id="@+id/view_navigation_header_view"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="@color/navbar_bottom_border_color" />

        <TextView
            android:id="@+id/tv_content_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingBottom="@dimen/font_15"
            android:paddingLeft="@dimen/font_15"
            android:paddingRight="@dimen/font_15"
            android:paddingTop="@dimen/font_15"
            android:textColor="@color/case_text_tital_name"
            android:textSize="@dimen/font_14" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_nodata"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_navr_header"
        android:background="@color/white"
        android:visibility="gone">

        <RelativeLayout
            android:id="@+id/rl_inspiration_name_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_inspiration_name_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginBottom="@dimen/font_20"
                android:layout_marginLeft="@dimen/font_10"
                android:layout_marginRight="@dimen/font_10"
                android:layout_marginTop="@dimen/font_20"
                android:layout_toLeftOf="@+id/rl_dingyue_no"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="@color/bg_262626"
                android:textSize="@dimen/size_18" />

            <RelativeLayout
                android:id="@+id/rl_dingyue_no"
                android:layout_width="@dimen/font_55"
                android:layout_height="@dimen/font_24"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/tv_inspiration_name_no"
                android:layout_marginRight="@dimen/font_10"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_dingyue_name_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/size_12" />

            </RelativeLayout>

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_inspiration_miaosu_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_inspiration_name_no"
            android:layout_marginBottom="@dimen/font_18"
            android:layout_marginLeft="@dimen/font_10"
            android:layout_marginRight="@dimen/font_25"
            android:includeFontPadding="false"
            android:lineSpacingExtra="@dimen/font_8"
            android:maxLines="3"
            android:textColor="@color/bg_707070"
            android:textSize="@dimen/size_14" />

        <ImageView
            android:id="@+id/iv_more_miaosu_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_inspiration_miaosu_no"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/font_8"
            android:layout_marginRight="@dimen/font_10"
            android:src="@drawable/zhuanjijs"
            android:visibility="gone" />


        <RelativeLayout
            android:id="@+id/rl_inspiration_userinfo_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_inspiration_miaosu_no"
            android:layout_marginBottom="@dimen/font_18">

            <ImageView
                android:id="@+id/iv_user_header_no"
                android:layout_width="@dimen/font_24"
                android:layout_height="@dimen/font_24"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/font_10" />

            <TextView
                android:id="@+id/tv_user_name_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/font_10"
                android:layout_toRightOf="@+id/iv_user_header_no"
                android:textColor="@color/bg_464646"
                android:textSize="@dimen/size_12" />


            <TextView
                android:id="@+id/tv_user_dingyue_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/font_10"
                android:textColor="@color/bg_464646"
                android:textSize="@dimen/size_12" />

            <com.homechart.app.myview.RoundImageView
                android:id="@+id/riv_round_no"
                android:layout_width="@dimen/font_2"
                android:layout_height="@dimen/font_2"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/font_7"
                android:layout_toLeftOf="@+id/tv_user_dingyue_no"
                android:background="@color/black" />

            <TextView
                android:id="@+id/tv_user_pic_num_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/font_7"
                android:layout_toLeftOf="@+id/riv_round_no"
                android:textColor="@color/bg_464646"
                android:textSize="@dimen/size_12" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_none"
            android:layout_width="match_parent"
            android:layout_height="@dimen/font_120"
            android:layout_below="@+id/rl_inspiration_userinfo_no"
            android:background="@color/bg_f2f2f2">

            <TextView
                android:id="@+id/tv_none"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:text="Ta的灵感辑中空空如也..."
                android:textColor="@color/bg_8f8f8f"
                android:textSize="@dimen/size_14" />

        </RelativeLayout>

    </RelativeLayout>


    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/cl_coordinator"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rl_navr_header">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:elevation="0dp"
            android:theme="@style/AppTheme.AppBarOverlay">

            <android.support.design.widget.CollapsingToolbarLayout
                android:id="@+id/collapsing_toolbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:contentScrim="?attr/colorPrimary"
                app:layout_scrollFlags="scroll|exitUntilCollapsed|snap">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    app:layout_scrollFlags="scroll|enterAlways|snap">


                    <RelativeLayout
                        android:id="@+id/rl_inspiration_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tv_inspiration_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginBottom="@dimen/font_20"
                            android:layout_marginLeft="@dimen/font_10"
                            android:layout_marginRight="@dimen/font_10"
                            android:layout_marginTop="@dimen/font_20"
                            android:layout_toLeftOf="@+id/rl_dingyue"
                            android:ellipsize="end"
                            android:maxLines="2"
                            android:textColor="@color/bg_262626"
                            android:textSize="@dimen/size_18" />

                        <RelativeLayout
                            android:id="@+id/rl_dingyue"
                            android:layout_width="@dimen/font_55"
                            android:layout_height="@dimen/font_24"
                            android:layout_alignParentRight="true"
                            android:layout_alignTop="@+id/tv_inspiration_name"
                            android:layout_marginRight="@dimen/font_10"
                            android:visibility="gone">

                            <TextView
                                android:id="@+id/tv_dingyue_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:textColor="@color/white"
                                android:textSize="@dimen/size_12" />

                        </RelativeLayout>

                    </RelativeLayout>

                    <TextView
                        android:id="@+id/tv_inspiration_miaosu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/rl_inspiration_name"
                        android:layout_marginBottom="@dimen/font_18"
                        android:layout_marginLeft="@dimen/font_10"
                        android:layout_marginRight="@dimen/font_25"
                        android:includeFontPadding="false"
                        android:lineSpacingExtra="@dimen/font_8"
                        android:maxLines="3"
                        android:textColor="@color/bg_707070"
                        android:textSize="@dimen/size_14" />

                    <ImageView
                        android:id="@+id/iv_more_miaosu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/tv_inspiration_miaosu"
                        android:layout_alignParentRight="true"
                        android:layout_marginBottom="@dimen/font_8"
                        android:layout_marginRight="@dimen/font_10"
                        android:src="@drawable/zhuanjijs"
                        android:visibility="gone" />


                    <RelativeLayout
                        android:id="@+id/rl_inspiration_userinfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_inspiration_miaosu"
                        android:layout_marginBottom="@dimen/font_18">

                        <ImageView
                            android:id="@+id/iv_user_header"
                            android:layout_width="@dimen/font_24"
                            android:layout_height="@dimen/font_24"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/font_10" />

                        <TextView
                            android:id="@+id/tv_user_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/font_10"
                            android:layout_toRightOf="@+id/iv_user_header"
                            android:textColor="@color/bg_464646"
                            android:textSize="@dimen/size_12" />


                        <TextView
                            android:id="@+id/tv_user_dingyue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/font_10"
                            android:textColor="@color/bg_464646"
                            android:textSize="@dimen/size_12" />

                        <com.homechart.app.myview.RoundImageView
                            android:id="@+id/riv_round"
                            android:layout_width="@dimen/font_2"
                            android:layout_height="@dimen/font_2"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/font_7"
                            android:layout_toLeftOf="@+id/tv_user_dingyue"
                            android:background="@color/black" />

                        <TextView
                            android:id="@+id/tv_user_pic_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/font_7"
                            android:layout_toLeftOf="@+id/riv_round"
                            android:textColor="@color/bg_464646"
                            android:textSize="@dimen/size_12" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_top_check1"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/font_45"
                        android:layout_below="@+id/rl_inspiration_userinfo"
                        android:background="@color/white"
                        android:visibility="gone">

                        <RelativeLayout
                            android:id="@+id/rl_check_pic1"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true">

                            <TextView
                                android:id="@+id/tv_check_name1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="@dimen/font_10"
                                android:text="小图"
                                android:textColor="@color/bg_262626"
                                android:textSize="@dimen/size_10" />

                            <ImageView
                                android:id="@+id/iv_check_icon1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="@dimen/font_6"
                                android:layout_toLeftOf="@+id/tv_check_name1"
                                android:src="@drawable/pubuliu1" />


                        </RelativeLayout>

                    </RelativeLayout>

                </RelativeLayout>

            </android.support.design.widget.CollapsingToolbarLayout>

        </android.support.design.widget.AppBarLayout>

        <LinearLayout
            android:id="@+id/ll_bottom"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/bg_f2f2f2"
            android:orientation="vertical"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <com.homechart.app.recyclerlibrary.recyclerview.HRecyclerView
                android:id="@+id/rcy_recyclerview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/bg_f2f2f2"
                android:paddingLeft="@dimen/font_5"
                android:paddingRight="@dimen/font_5"
                app:loadMoreEnabled="true"
                app:loadMoreFooterLayout="@layout/layout_hrecyclerview_load_more_footer_huodong"
                app:refreshEnabled="false"
                app:refreshHeaderLayout="@layout/layout_hrecyclerview_refresh_header" />

        </LinearLayout>

    </android.support.design.widget.CoordinatorLayout>

    <RelativeLayout
        android:id="@+id/rl_top_check"
        android:layout_width="match_parent"
        android:layout_height="@dimen/font_45"
        android:layout_below="@+id/rl_navr_header"
        android:background="@color/white"
        android:visibility="gone">

        <RelativeLayout
            android:id="@+id/rl_check_pic"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true">


            <RelativeLayout
                android:id="@+id/rl_dingyue1"
                android:layout_width="@dimen/font_55"
                android:layout_height="@dimen/font_24"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/font_10"
                android:background="@drawable/bt_login"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_dingyue_name1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/size_12" />


            </RelativeLayout>


            <TextView
                android:id="@+id/tv_check_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/font_10"
                android:text="小图"
                android:textColor="@color/bg_262626"
                android:textSize="@dimen/size_10" />

            <ImageView
                android:id="@+id/iv_check_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/font_6"
                android:layout_toLeftOf="@+id/tv_check_name"
                android:src="@drawable/pubuliu1" />


        </RelativeLayout>

    </RelativeLayout>


    <TextView
        android:id="@+id/tv_test"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/font_10"
        android:layout_marginRight="@dimen/font_25"
        android:includeFontPadding="false"
        android:lineSpacingExtra="@dimen/font_8"
        android:textColor="@color/bg_707070"
        android:textSize="@dimen/size_14"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/tv_test_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/font_20"
        android:layout_marginRight="@dimen/font_35"
        android:includeFontPadding="false"
        android:lineSpacingExtra="@dimen/font_8"
        android:textColor="@color/bg_707070"
        android:textSize="@dimen/size_14"
        android:visibility="invisible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="invisible">

        <TextView
            android:id="@+id/tv_test_list_pubu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/font_20"
            android:layout_marginRight="@dimen/font_30"
            android:layout_weight="1"
            android:includeFontPadding="false"
            android:lineSpacingExtra="@dimen/font_8"
            android:textColor="@color/bg_707070"
            android:textSize="@dimen/size_14" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/font_10"
            android:layout_marginRight="@dimen/font_25"
            android:layout_weight="1"
            android:includeFontPadding="false"
            android:lineSpacingExtra="@dimen/font_8"
            android:textColor="@color/bg_707070"
            android:textSize="@dimen/size_14" />
    </LinearLayout>


</RelativeLayout>
