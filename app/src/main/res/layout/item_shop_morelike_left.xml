<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_item_shop_all"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="right"
    android:background="@color/white">

    <ImageView
        android:id="@+id/iv_imageview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/font_7"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="@dimen/font_3"/>

    <TextView
        android:id="@+id/tv_shop_item_name"
        android:layout_below="@+id/iv_imageview"
        android:layout_alignLeft="@+id/iv_imageview"
        android:layout_alignRight="@+id/iv_imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/font_8"
        android:lineSpacingExtra="@dimen/font_2"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@color/bg_262626"
        android:textSize="@dimen/size_14"
        android:text="商品名称"/>

    <TextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/font_4"
        android:layout_marginBottom="@dimen/font_14"
        android:textColor="@color/bg_dda066"
        android:textSize="@dimen/size_13"
        android:layout_alignLeft="@+id/iv_imageview"
        android:text="¥ 33.00"
        android:layout_below="@+id/tv_shop_item_name"/>

</RelativeLayout>
