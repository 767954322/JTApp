<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/id_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_new_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/rl_homepic_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/font_8"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iv_open_pop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingLeft="@dimen/font_10"
                android:paddingRight="@dimen/font_15"
                android:src="@drawable/shaixuan"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/iv_top_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/font_15"
                android:layout_marginRight="@dimen/font_10"
                android:src="@drawable/jiatu"
                android:visibility="gone" />

            <com.homechart.app.myview.ClearEditText
                android:id="@+id/cet_clearedit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/font_27"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="@dimen/font_15"
                android:layout_marginRight="@dimen/font_15"
                android:background="@drawable/bg_edittext_search"
                android:drawableLeft="@drawable/fdj"
                android:drawablePadding="@dimen/font_6"
                android:gravity="center_vertical"
                android:hint="搜索你感兴趣的图片"
                android:paddingLeft="@dimen/font_10"
                android:textColorHint="@color/bg_b2b2b2"
                android:textSize="@dimen/size_14" />

        </RelativeLayout>

        <View
            android:id="@+id/view_line_top"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/rl_homepic_top"
            android:layout_marginTop="@dimen/font_7"
            android:background="@color/view_line" />

        <RelativeLayout
            android:id="@+id/rl_pic_change"
            android:layout_width="match_parent"
            android:layout_height="@dimen/font_44"
            android:visibility="gone"
            android:layout_below="@+id/view_line_top"
            android:background="@color/white">

            <ImageView
                android:id="@+id/iv_color_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/font_15"
                android:src="@drawable/cshaixuan" />

            <TextView
                android:id="@+id/tv_color_tital"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/font_8"
                android:layout_toRightOf="@+id/iv_color_icon"
                android:text="色彩筛选"
                android:textColor="@color/bg_e79056"
                android:textSize="@dimen/size_12" />

            <TextView
                android:id="@+id/bt_tag_page_item"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="@dimen/font_50"
                android:layout_height="@dimen/font_24"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/font_8"
                android:layout_toRightOf="@+id/iv_color_icon"
                android:background="@drawable/tv_color_secai"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/font_14"
                android:visibility="gone" />


            <ImageView
                android:id="@+id/iv_chongzhi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/font_7"
                android:layout_toRightOf="@+id/bt_tag_page_item"
                android:gravity="center"
                android:src="@drawable/chongzhi"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/iv_change_frag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingBottom="@dimen/font_5"
                android:paddingLeft="@dimen/font_100"
                android:paddingRight="@dimen/font_12"
                android:paddingTop="@dimen/font_5"
                android:src="@drawable/changtu" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_go_dingyue"
            android:layout_width="match_parent"
            android:layout_height="@dimen/font_40"
            android:layout_below="@+id/view_line_top"
            android:background="@color/bg_e79056"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="订阅标签，定制你的专属首页"
                    android:textColor="@drawable/white"
                    android:includeFontPadding="false"
                    android:textSize="@dimen/size_14" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/font_6"
                    android:src="@drawable/dakai" />

            </LinearLayout>


            <RelativeLayout
                android:id="@+id/rl_close_dingyue"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:clickable="true">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="@dimen/font_11"
                    android:paddingRight="@dimen/font_11"
                    android:src="@drawable/guan_1" />
            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>


    <com.homechart.app.recyclerlibrary.recyclerview.HRecyclerView
        android:id="@+id/rcy_recyclerview_pic"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rl_new_top"
        android:background="@color/bg_f2f2f2"
        android:paddingLeft="@dimen/font_6"
        android:paddingRight="@dimen/font_6"
        app:loadMoreEnabled="true"
        app:loadMoreFooterLayout="@layout/layout_hrecyclerview_load_more_footer"
        app:refreshEnabled="true"
        app:refreshHeaderLayout="@layout/layout_hrecyclerview_refresh_header" />


    <RelativeLayout
        android:id="@+id/rl_copy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/back_copy"
        android:layout_alignParentBottom="true">

        <ImageView
            android:id="@+id/iv_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/font_15"
            android:layout_marginLeft="@dimen/font_30"
            android:src="@drawable/dakai1"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/iv_next">

            <TextView
                android:id="@+id/tv_tital"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/size_14"
                android:layout_marginLeft="@dimen/font_15"
                android:layout_marginTop="@dimen/font_14"
                android:text="打开你复制的链接"/>

            <TextView
                android:id="@+id/tv_url"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/size_14"
                android:layout_below="@+id/tv_tital"
                android:maxLines="3"
                android:ellipsize="end"
                android:text="sjdnksdnjkcsdncksdsnkjdncjksdncjksdncjksdjncksdcsdsjdnksdnjkcsdncksdsnkjdncjksdncjksdncjksdjncksdcsdsjdnksdnjkcsdncksdsnkjdncjksdncjksdncjksdjncksdcsd"
                android:layout_marginLeft="@dimen/font_15"
                android:layout_marginTop="@dimen/font_10"
                android:layout_marginBottom="@dimen/font_14"/>

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>