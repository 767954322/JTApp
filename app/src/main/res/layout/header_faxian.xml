<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">


    <android.support.v7.widget.RecyclerView
        android:id="@+id/hlv_tab2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/font_105"
        android:layout_below="@+id/view_line_top"
        android:layout_marginBottom="@dimen/font_15"
        android:layout_marginLeft="@dimen/font_10"
        android:layout_marginRight="@dimen/font_10"
        android:layout_marginTop="@dimen/font_15"
        android:background="@color/white"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hlv_tab2"
        android:scaleType="fitXY"
        android:src="@drawable/yinying" />

    <com.homechart.app.myview.MyListView
        android:id="@+id/lv_faxian_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_line"
        android:background="@color/white"
        android:divider="@null"
        android:visibility="gone" />
</RelativeLayout>
