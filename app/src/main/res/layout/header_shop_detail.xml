<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_shop_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/tv_shop_details_tital"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="@dimen/font_5"
        android:layout_below="@+id/iv_shop_image"
        android:textColor="@color/bg_262626"
        android:textSize="@dimen/size_17"
        android:layout_marginTop="@dimen/font_15" />

    <RelativeLayout
        android:id="@+id/rl_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/font_10"
        android:gravity="center_vertical"
        android:layout_below="@+id/tv_shop_details_tital">


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/font_10"
            android:layout_marginTop="@dimen/font_22"
            android:layout_centerVertical="true"
            android:gravity="bottom"
            android:id="@+id/relativeLayout">

            <TextView
                android:id="@+id/tv_price_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/tv_price_two"
                android:layout_alignBottom="@+id/tv_price_two"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:text="¥"
                android:textColor="@color/bg_dda066"
                android:textSize="@dimen/font_15" />

            <TextView
                android:id="@+id/tv_price_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/font_3"
                android:layout_toRightOf="@+id/tv_price_one"
                android:text="99"
                android:textColor="@color/bg_dda066"
                android:textSize="@dimen/font_24" />
            <TextView
                android:id="@+id/tv_price_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tv_price_two"
                android:text=".00"
                android:textColor="@color/bg_dda066"
                android:textSize="@dimen/font_15"
                android:layout_alignBottom="@+id/tv_price_one" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_buy"
            android:layout_width="@dimen/font_150"
            android:layout_height="@dimen/font_35"
            android:background="@drawable/bt_login"
            android:textColor="@color/white"
            android:paddingLeft="@dimen/font_12"
            android:paddingRight="@dimen/font_12"
            android:paddingTop="@dimen/font_5"
            android:paddingBottom="@dimen/font_5"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:layout_marginTop="@dimen/font_15"
            android:layout_marginRight="@dimen/font_10"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/size_14"
            android:text="直达链接" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_shoucang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_price"
        android:layout_marginTop="@dimen/font_20">

        <ImageView
            android:id="@+id/iv_shoucang_shop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/xing"
            android:layout_marginLeft="@dimen/font_10"
            android:layout_centerVertical="true"/>

        <View
            android:id="@+id/view_line_none"
            android:layout_width="@dimen/font_4"
            android:layout_height="@dimen/font_1"
            android:visibility="gone"
            android:layout_toRightOf="@+id/iv_shoucang_shop"/>

        <TextView
            android:id="@+id/tv_num_people"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/size_14"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/font_5"
            android:layout_toRightOf="@+id/view_line_none"
            android:textColor="@color/bg_dda066"
            android:text="15"/>
        <TextView
            android:id="@+id/tv_tital_people"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/size_14"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tv_num_people"
            android:textColor="@color/bg_8f8f8f"
            android:text="人已加入收藏"/>


    </RelativeLayout>

    <View
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/font_10"
        android:background="@color/bg_f2f2f2"
        android:layout_marginTop="@dimen/font_18"
        android:layout_below="@+id/rl_shoucang" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_line"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/font_13"
        android:layout_marginTop="@dimen/font_13"
        android:text="更多相似商品"
        android:textColor="@color/bg_262626"
        android:textSize="@dimen/size_14" />

</RelativeLayout>
