<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <include
        android:id="@+id/common_navbar"
        layout="@layout/view_navigation_header" />

    <EditText
        android:id="@+id/et_miaosu"
        android:layout_width="match_parent"
        android:layout_height="@dimen/font_275"
        android:layout_below="@+id/common_navbar"
        android:layout_marginBottom="@dimen/font_15"
        android:layout_marginLeft="@dimen/font_15"
        android:layout_marginRight="@dimen/font_15"
        android:layout_marginTop="@dimen/font_15"
        android:background="@null"
        android:gravity="top"
        android:hint="喜欢的理由，写下来如何？"
        android:textColor="@color/bg_464646"
        android:textColorHint="@color/bg_b2b2b2"
        android:textSize="@dimen/size_14" />

    <View
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/et_miaosu"
        android:layout_marginLeft="@dimen/font_15"
        android:layout_marginRight="@dimen/font_15"
        android:background="@color/view_line" />


    <ImageView
        android:id="@+id/iv_image"
        android:layout_width="@dimen/font_100"
        android:layout_height="@dimen/font_100"
        android:layout_below="@+id/view_line"
        android:layout_marginLeft="@dimen/font_15"
        android:layout_marginTop="@dimen/font_15"
        android:scaleType="centerCrop" />


    <TextView
        android:id="@+id/tv_image_up_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_image"
        android:layout_marginLeft="@dimen/font_15"
        android:layout_marginTop="@dimen/font_10"
        android:textColor="@color/bg_464646"
        android:textSize="@dimen/size_14" />

</RelativeLayout>