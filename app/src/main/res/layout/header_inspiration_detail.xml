<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_inspiration_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/size_18"
        android:layout_marginLeft="@dimen/font_5"
        android:layout_marginRight="@dimen/font_5"
        android:textColor="@color/bg_262626"
        android:layout_marginTop="@dimen/font_21"
        android:text="你家的沙发有多好看？"/>

    <TextView
        android:id="@+id/tv_inspiration_miaosu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/size_14"
        android:includeFontPadding="false"
        android:layout_below="@+id/tv_inspiration_name"
        android:textColor="@color/bg_707070"
        android:lineSpacingExtra="@dimen/font_8"
        android:layout_marginTop="@dimen/font_21"
        android:layout_marginLeft="@dimen/font_5"
        android:layout_marginRight="@dimen/font_5"
        android:layout_marginBottom="@dimen/font_10"
        android:text="你家的沙发有多好看？"/>


</RelativeLayout>
