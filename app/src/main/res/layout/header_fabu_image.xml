<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_linggan"
        android:layout_width="@dimen/font_64"
        android:layout_height="@dimen/font_64"
        android:layout_marginLeft="@dimen/font_15"
        android:layout_marginTop="@dimen/font_22"
        android:scaleType="centerCrop"/>


    <EditText
        android:id="@+id/rt_linggan_content"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="22dp"
        android:background="@null"
        android:gravity="top"
        android:maxLength="1000"
        android:hint="说点什么吧..."
        android:paddingLeft="@dimen/font_10"
        android:paddingRight="@dimen/font_10"
        android:paddingTop="@dimen/font_5"
        android:textColor="@color/bg_464646"
        android:textColorHint="@color/bg_b2b2b2"
        android:textCursorDrawable="@null"
        android:textSize="@dimen/size_14"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_toRightOf="@+id/iv_linggan"/>

    <View
        android:id="@+id/view_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/font_10"
        android:layout_below="@+id/iv_linggan"
        android:layout_marginTop="@dimen/font_50"
        android:background="@color/bg_eeeeee" />

    <com.homechart.app.myview.FlowLayoutFaBu
        android:id="@+id/fl_tag_flowLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_top"
        android:background="@color/white"
        android:visibility="visible" />

    <View
        android:id="@+id/view_center"
        android:layout_width="match_parent"
        android:layout_height="@dimen/font_10"
        android:layout_below="@+id/fl_tag_flowLayout"
        android:background="@color/bg_eeeeee" />



    <RelativeLayout
        android:id="@+id/rl_add_inspiration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="@dimen/font_20"
        android:layout_marginBottom="@dimen/font_17"
        android:layout_below="@+id/view_center">

        <ImageView
            android:id="@+id/iv_icon_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/font_15"
            android:src="@drawable/chuangjian"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/bg_8f8f8f"
            android:textSize="@dimen/size_14"
            android:layout_toRightOf="@+id/iv_icon_add"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/font_11"
            android:text="创建灵感辑"/>

    </RelativeLayout>


</RelativeLayout>
