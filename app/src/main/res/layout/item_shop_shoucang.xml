<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_item_click"
    android:layout_width="match_parent"
    android:layout_height="@dimen/font_110">


    <CheckBox
        android:id="@+id/cb_check"
        style="@style/ShouCangArticleRadioButtonStyles"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/font_15"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/iv_article_image"
        android:layout_width="@dimen/font_105"
        android:layout_height="@dimen/font_80"
        android:layout_marginTop="@dimen/font_15"
        android:layout_marginLeft="@dimen/font_15"
        android:paddingBottom="@dimen/font_2"
        android:layout_toRightOf="@+id/cb_check"
        android:scaleType="centerCrop" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/view_line"
        android:layout_marginLeft="@dimen/font_15"
        android:layout_marginRight="@dimen/font_15"
        android:layout_alignParentBottom="true"/>

    <TextView
        android:id="@+id/tv_shop_item_tital"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/font_15"
        android:layout_marginRight="@dimen/font_15"
        android:layout_marginTop="@dimen/font_20"
        android:layout_toRightOf="@+id/iv_article_image"
        android:ellipsize="end"
        android:lineSpacingExtra="@dimen/font_6"
        android:maxLines="2"
        android:textColor="@color/bg_262626"
        android:textSize="@dimen/font_14" />


    <TextView
        android:id="@+id/tv_shop_item_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/iv_article_image"
        android:layout_alignBottom="@+id/iv_article_image"
        android:layout_marginLeft="@dimen/font_15"
        android:layout_marginBottom="@dimen/font_5"
        android:textColor="@color/bg_dda066"
        android:textStyle="bold"
        android:text="¥ 0"/>

    <TextView
        android:id="@+id/bt_buy"
        android:layout_width="@dimen/font_80"
        android:layout_height="@dimen/font_25"
        android:background="@drawable/bt_login"
        android:gravity="center"
        android:textColor="@color/white"
        android:layout_alignBottom="@+id/iv_article_image"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/font_15"
        android:text="直达链接"/>

</RelativeLayout>
