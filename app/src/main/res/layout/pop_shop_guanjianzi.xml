<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_pop_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/rl_pop_center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <TextView
            android:id="@+id/tv_tip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/font_25"
            android:layout_marginTop="@dimen/font_24"
            android:text="Tip: 只显示商品标题中含有关键字的商品"
            android:textColor="@color/bg_8f8f8f"
            android:textSize="@dimen/font_12" />


        <com.homechart.app.myview.ClearEditText
            android:id="@+id/cet_clearedit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/font_35"
            android:layout_below="@+id/tv_tip"
            android:layout_marginLeft="@dimen/font_25"
            android:layout_marginRight="@dimen/font_25"
            android:layout_marginTop="@dimen/font_14"
            android:background="@drawable/bg_edittext_shop"
            android:focusable="true"
            android:drawableLeft="@drawable/fdj"
            android:drawablePadding="@dimen/font_6"
            android:gravity="center_vertical"
            android:hint="输入关键字"
            android:paddingLeft="@dimen/font_10"
            android:textColorHint="@color/bg_8f8f8f"
            android:textSize="@dimen/size_14" />

        <Button
            android:id="@+id/bt_sure_guanjianzi"
            android:layout_width="@dimen/font_90"
            android:layout_height="@dimen/font_30"
            android:layout_below="@+id/cet_clearedit"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/font_20"
            android:layout_marginTop="@dimen/font_25"
            android:background="@drawable/bt_login"
            android:text="确认"
            android:textColor="@color/white" />


    </RelativeLayout>


    <View
        android:id="@+id/view_pop_bottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rl_pop_center" />

</RelativeLayout>
