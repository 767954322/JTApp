<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <RelativeLayout
        android:id="@+id/rl_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/font_16"
        android:gravity="center">


        <TextView
            android:id="@+id/tv_quxiao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:paddingLeft="@dimen/font_10"
            android:paddingRight="@dimen/font_12"
            android:text="取消"
            android:textColor="@color/bg_464646"
            android:textSize="@dimen/size_14" />

        <com.homechart.app.myview.ClearEditText
            android:id="@+id/cet_clearedit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/font_27"
            android:layout_marginLeft="@dimen/font_15"
            android:layout_toLeftOf="@+id/tv_quxiao"
            android:background="@drawable/bg_edittext_search"
            android:drawableLeft="@drawable/fdj"
            android:drawablePadding="@dimen/font_6"
            android:gravity="center_vertical"
            android:hint="输入关键词搜索"
            android:imeOptions="actionSearch"
            android:paddingLeft="@dimen/font_10"
            android:singleLine="true"
            android:textColorHint="@color/bg_8f8f8f"
            android:textCursorDrawable="@drawable/color_cursor"
            android:textSize="@dimen/size_14" />
    </RelativeLayout>


    <View
        android:id="@+id/view_top"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/rl_search"
        android:layout_marginTop="@dimen/font_8"
        android:background="@color/view_line" />


    <ScrollView
        android:id="@+id/sv_hostory"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/view_top">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/rl_search_tital"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/font_25">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/font_15"
                    android:text="大家都在搜"
                    android:textColor="@color/bg_8f8f8f"
                    android:textSize="@dimen/size_14" />

            </RelativeLayout>

            <com.homechart.app.myview.FlowLayoutSearch
                android:id="@+id/his_flowLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_search_tital" />

            <RelativeLayout
                android:id="@+id/rl_search_hostory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/his_flowLayout"
                android:layout_marginTop="@dimen/font_15"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/font_15"
                    android:text="搜索历史"
                    android:textColor="@color/bg_8f8f8f"
                    android:textSize="@dimen/size_14" />

                <ImageView
                    android:id="@+id/iv_delete_hostory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:paddingLeft="@dimen/font_15"
                    android:paddingRight="@dimen/font_15"
                    android:src="@drawable/delete_hostory" />

            </RelativeLayout>

            <com.homechart.app.myview.MyListView
                android:id="@+id/lv_hostory_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_search_hostory"
                android:layout_marginTop="@dimen/font_7"
                android:divider="@null"
                android:visibility="gone" />

        </RelativeLayout>


    </ScrollView>

    <ScrollView
        android:id="@+id/sv_result"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/view_top"
        android:background="@color/bg_f2f2f2"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">


            <RelativeLayout
                android:id="@+id/rl_result_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_result_pic_tital"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/font_15"
                    android:layout_marginLeft="@dimen/font_15"
                    android:layout_marginTop="@dimen/font_20"
                    android:text="图片"
                    android:textColor="@color/bg_8f8f8f"
                    android:textSize="@dimen/size_12" />

                <View
                    android:id="@+id/view_result_list"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_below="@+id/tv_result_pic_tital"
                    android:layout_marginLeft="@dimen/font_15"
                    android:layout_marginRight="@dimen/font_15"
                    android:background="@color/view_line" />

                <com.homechart.app.myview.MyListView
                    android:id="@+id/lv_result_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/view_result_list"
                    android:divider="@null"
                    android:visibility="gone" />

                <RelativeLayout
                    android:id="@+id/rl_pic_all"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lv_result_list"
                    android:layout_marginLeft="@dimen/font_15"
                    android:layout_marginRight="@dimen/font_15"
                    android:layout_marginTop="@dimen/font_10"
                    android:layout_marginBottom="@dimen/font_10"
                    android:visibility="gone">

                    <com.homechart.app.myview.RoundJiaoImageView
                        android:id="@+id/iv_pic_one"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="centerCrop"
                        android:layout_alignParentLeft="true" />

                    <com.homechart.app.myview.RoundJiaoImageView
                        android:id="@+id/iv_pic_two"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="centerCrop"
                        android:layout_centerHorizontal="true" />

                    <com.homechart.app.myview.RoundJiaoImageView
                        android:id="@+id/iv_pic_three"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="centerCrop"
                        android:layout_alignParentRight="true" />
                </RelativeLayout>

                <View
                    android:id="@+id/view_below_pics"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginRight="@dimen/font_15"
                    android:layout_marginLeft="@dimen/font_15"
                    android:background="@color/view_line"
                    android:visibility="gone"
                    android:layout_below="@+id/rl_pic_all"/>


                <RelativeLayout
                    android:id="@+id/rl_more_pic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/view_below_pics">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/font_17"
                        android:layout_marginLeft="@dimen/font_15"
                        android:layout_marginTop="@dimen/font_17"
                        android:text="查看更多图片"
                        android:textColor="@color/bg_464646"
                        android:textSize="@dimen/size_14" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/font_15"
                        android:src="@drawable/next" />

                </RelativeLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/font_10"
                    android:layout_below="@+id/rl_more_pic"
                    android:background="@color/bg_f2f2f2" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_result_ling"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_result_image">

                <TextView
                    android:id="@+id/tv_result_ling_tital"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/font_15"
                    android:layout_marginLeft="@dimen/font_15"
                    android:layout_marginTop="@dimen/font_20"
                    android:text="灵感辑"
                    android:textColor="@color/bg_8f8f8f"
                    android:textSize="@dimen/size_12" />

                <View
                    android:id="@+id/view_ling_list"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_below="@+id/tv_result_ling_tital"
                    android:layout_marginLeft="@dimen/font_15"
                    android:layout_marginRight="@dimen/font_15"
                    android:background="@color/view_line" />

                <RelativeLayout
                    android:id="@+id/rl_album_all"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/view_ling_list"
                    android:layout_marginLeft="@dimen/font_15"
                    android:layout_marginRight="@dimen/font_15"
                    android:layout_marginTop="@dimen/font_10"
                    android:layout_marginBottom="@dimen/font_10"
                    android:visibility="gone">

                    <RelativeLayout
                        android:id="@+id/rl_images_one"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_marginBottom="@dimen/font_11"
                        android:background="@drawable/bt_imgdetails_album">

                        <ImageView
                            android:id="@+id/iv_img1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true" />

                        <ImageView
                            android:id="@+id/iv_img2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentTop="true" />

                        <ImageView
                            android:id="@+id/iv_img3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentLeft="true" />

                        <ImageView
                            android:id="@+id/iv_img4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentRight="true" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_images_two"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="@dimen/font_11"
                        android:background="@drawable/bt_imgdetails_album">

                        <ImageView
                            android:id="@+id/iv_img5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true" />

                        <ImageView
                            android:id="@+id/iv_img6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentTop="true" />

                        <ImageView
                            android:id="@+id/iv_img7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentLeft="true" />

                        <ImageView
                            android:id="@+id/iv_img8"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentRight="true" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_images_three"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginBottom="@dimen/font_11"
                        android:background="@drawable/bt_imgdetails_album">

                        <ImageView
                            android:id="@+id/iv_img9"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true" />

                        <ImageView
                            android:id="@+id/iv_img10"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentTop="true" />

                        <ImageView
                            android:id="@+id/iv_img11"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentLeft="true" />

                        <ImageView
                            android:id="@+id/iv_img12"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentRight="true" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_header1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/rl_images_one"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="@dimen/font_10">

                        <com.homechart.app.myview.RoundImageView
                            android:id="@+id/riv_header_back1"
                            android:layout_width="@dimen/font_26"
                            android:layout_height="@dimen/font_26"
                            android:layout_centerInParent="true"
                            android:background="@color/white" />


                        <com.homechart.app.myview.RoundImageView
                            android:id="@+id/riv_header_one"
                            android:layout_width="@dimen/font_22"
                            android:layout_height="@dimen/font_22"
                            android:layout_above="@+id/riv_header_back1"
                            android:layout_centerInParent="true" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_header2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/rl_images_two"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="@dimen/font_10">

                        <com.homechart.app.myview.RoundImageView
                            android:id="@+id/riv_header_back2"
                            android:layout_width="@dimen/font_26"
                            android:layout_height="@dimen/font_26"
                            android:layout_centerInParent="true"
                            android:background="@color/white" />


                        <com.homechart.app.myview.RoundImageView
                            android:id="@+id/riv_header_two"
                            android:layout_width="@dimen/font_22"
                            android:layout_height="@dimen/font_22"
                            android:layout_above="@+id/riv_header_back2"
                            android:layout_centerInParent="true" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_header3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/rl_images_three"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="@dimen/font_10">

                        <com.homechart.app.myview.RoundImageView
                            android:id="@+id/riv_header_back3"
                            android:layout_width="@dimen/font_26"
                            android:layout_height="@dimen/font_26"
                            android:layout_centerInParent="true"
                            android:background="@color/white" />

                        <com.homechart.app.myview.RoundImageView
                            android:id="@+id/riv_header_three"
                            android:layout_width="@dimen/font_22"
                            android:layout_height="@dimen/font_22"
                            android:layout_above="@+id/riv_header_back3"
                            android:layout_centerInParent="true" />
                    </RelativeLayout>

                </RelativeLayout>


                <View
                    android:id="@+id/view_result_ling"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_below="@+id/rl_album_all"
                    android:background="@color/view_line" />

                <RelativeLayout
                    android:id="@+id/rl_more_ling"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/font_20"
                    android:layout_below="@+id/view_result_ling">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/font_17"
                        android:layout_marginLeft="@dimen/font_15"
                        android:layout_marginTop="@dimen/font_17"
                        android:text="查看更多灵感辑"
                        android:textColor="@color/bg_464646"
                        android:textSize="@dimen/size_14" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/font_15"
                        android:src="@drawable/next" />

                </RelativeLayout>


            </RelativeLayout>


        </RelativeLayout>


    </ScrollView>


</RelativeLayout>