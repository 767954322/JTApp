<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_pingdao"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@color/white">


    <View
        android:id="@+id/view_one_show"
        android:layout_width="@dimen/font_8"
        android:layout_height="match_parent"
        android:visibility="gone"/>


    <RelativeLayout
        android:id="@+id/rl_item_pingdao"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/view_one_show">

        <TextView
            android:id="@+id/tv_item_pingdao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:paddingLeft="@dimen/font_15"
            android:paddingRight="@dimen/font_15"
            android:text="热门"
            android:textColor="@color/bg_464646"
            android:textSize="@dimen/size_14" />

        <View
            android:id="@+id/view_bottom"
            android:layout_width="@dimen/font_26"
            android:layout_height="@dimen/font_2"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/font_2"
            android:visibility="gone"
            android:background="@drawable/bg_pingdao_below" />

    </RelativeLayout>


</RelativeLayout>
