<?xml version="1.0" encoding="utf-8"?>
<com.homechart.app.myview.ResizeRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/menu_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_eeeeee">

    <com.homechart.app.recyclerlibrary.recyclerview.HRecyclerView
        android:id="@+id/rcy_recyclerview_info"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/et_edit"
        android:layout_below="@+id/common_navbar"
        android:descendantFocusability="blocksDescendants"
        app:loadMoreEnabled="true"
        app:loadMoreFooterLayout="@layout/layout_hrecyclerview_load_more_footer_huodong"
        app:refreshEnabled="false"
        app:refreshHeaderLayout="@layout/layout_hrecyclerview_refresh_header" />

    <ImageView
        android:id="@+id/bt_shiwu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/font_15"
        android:layout_marginRight="@dimen/font_10"
        android:src="@drawable/tongkuan2"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/bt_shise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/font_15"
        android:layout_marginRight="@dimen/font_10"
        android:layout_toLeftOf="@+id/bt_shiwu"
        android:src="@drawable/secai2"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/iv_xing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/font_64"
        android:layout_marginRight="@dimen/font_10"
        android:layout_toLeftOf="@+id/bt_shise"
        android:src="@drawable/xing2"
        android:visibility="gone" />


    <RelativeLayout
        android:id="@+id/rl_color"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/font_50"
        android:background="@color/bg_80000000"
        android:clickable="true"
        android:visibility="gone">

        <RelativeLayout
            android:id="@+id/rl_color_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/font_10"
            android:layout_marginRight="@dimen/font_10"
            android:background="@drawable/back_jubao">

            <LinearLayout
                android:id="@+id/ll_color_lines"
                android:layout_width="match_parent"
                android:layout_height="@dimen/font_30"
                android:layout_marginLeft="@dimen/font_10"
                android:layout_marginRight="@dimen/font_10"
                android:layout_marginTop="@dimen/font_15"
                android:orientation="horizontal" />

            <com.homechart.app.myview.MyListView
                android:id="@+id/dgv_colorlist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_color_lines"
                android:layout_marginTop="@dimen/font_25"
                android:descendantFocusability="blocksDescendants"
                android:divider="@null" />

            <TextView
                android:id="@+id/tv_color_tips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dgv_colorlist"
                android:layout_marginLeft="@dimen/font_10"
                android:layout_marginRight="@dimen/font_10"
                android:lineSpacingExtra="@dimen/font_4"
                android:text="Tips:因光线和显示原因，图中色彩可能与实际色彩有所偏差。"
                android:textColor="@color/bg_8f8f8f"
                android:textSize="@dimen/size_12" />

            <RelativeLayout
                android:id="@+id/rl_color_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/tv_color_tips"
                android:layout_marginBottom="@dimen/font_15"
                android:layout_marginTop="@dimen/font_25">

                <TextView
                    android:id="@+id/tv_color_start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="power by 码隆科技 "
                    android:textColor="@color/bg_8f8f8f"
                    android:textSize="@dimen/size_12" />

                <ImageView
                    android:id="@+id/iv_colot_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/tv_color_start"
                    android:src="@drawable/productai" />

                <TextView
                    android:id="@+id/tv_color_end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/font_10"
                    android:layout_toRightOf="@+id/iv_colot_icon"
                    android:text="@string/color_end"
                    android:textColor="@color/bg_8f8f8f"
                    android:textSize="@dimen/size_12" />

            </RelativeLayout>

        </RelativeLayout>


        <ImageView
            android:id="@+id/iv_close_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_color_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/font_45"
            android:src="@drawable/guanbi2" />

    </RelativeLayout>

    <View
        android:id="@+id/color_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/font_50"
        android:layout_alignParentBottom="true"
        android:background="@color/bg_80000000"
        android:clickable="true"
        android:visibility="gone" />
</com.homechart.app.myview.ResizeRelativeLayout>
