<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/rl_navr_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/font_50"
        android:background="@color/bg_f9"
        android:gravity="center_vertical">

        <RelativeLayout
            android:id="@+id/backButton_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/nav_left_imageButton"
                android:layout_width="@dimen/size_40"
                android:layout_height="@dimen/size_40"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/size_10"
                android:background="@drawable/transparent"
                android:padding="@dimen/size_8"
                android:scaleType="centerInside"
                android:src="@drawable/quxiao1"
                android:visibility="visible" />

            <TextView
                android:id="@+id/nav_left_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:textSize="@dimen/font_17"
                android:visibility="gone" />
        </RelativeLayout>


        <ImageButton
            android:id="@+id/nav_secondary_imageButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/transparent"
            android:padding="@dimen/size_8"
            android:scaleType="centerInside" />

        <TextView
            android:id="@+id/tv_tital_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/case_text_tital_name"
            android:textSize="@dimen/font_18" />

        <View
            android:id="@+id/view_navigation_header_view"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="@color/navbar_bottom_border_color" />

        <TextView
            android:id="@+id/tv_content_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingBottom="@dimen/font_15"
            android:paddingLeft="@dimen/font_15"
            android:paddingRight="@dimen/font_15"
            android:paddingTop="@dimen/font_15"
            android:textColor="@color/case_text_tital_name"
            android:textSize="@dimen/font_14" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_name"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_navr_header"
        android:layout_marginBottom="@dimen/font_15"
        android:layout_marginLeft="@dimen/font_23"
        android:layout_marginTop="@dimen/font_30"
        android:text="举报原因："
        android:textColor="@color/bg_8f8f8f"
        android:textSize="@dimen/font_14" />


    <com.homechart.app.myview.MyListView
        android:id="@+id/mlv_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@null"
        android:layout_below="@+id/tv_name" />


    <EditText
        android:id="@+id/et_liyou"
        android:layout_width="match_parent"
        android:layout_height="@dimen/font_120"
        android:layout_below="@+id/mlv_listview"
        android:layout_marginLeft="@dimen/font_50"
        android:layout_marginRight="@dimen/font_50"
        android:layout_marginTop="@dimen/font_5"
        android:background="@drawable/bg_edittext_jubao"
        android:gravity="top"
        android:maxLength="500"
        android:hint="举报理由"
        android:paddingLeft="@dimen/font_10"
        android:paddingRight="@dimen/font_10"
        android:paddingTop="@dimen/font_10"
        android:textColor="@color/case_text_tital_detail"
        android:textColorHint="@color/bg_b2b2b2"
        android:textCursorDrawable="@null"
        android:textSize="@dimen/size_14" />


</RelativeLayout>
