<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/id_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/rl_create_tital"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_dismiss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/font_17"
            android:paddingLeft="@dimen/font_15"
            android:paddingRight="@dimen/font_15"
            android:paddingTop="@dimen/font_17"
            android:src="@drawable/guandiao" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="创建灵感辑"
            android:textColor="@color/case_text_tital_name"
            android:textSize="@dimen/font_14" />

        <TextView
            android:id="@+id/tv_sure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/font_15"
            android:text="确定"
            android:textColor="@color/bg_262626"
            android:textSize="@dimen/size_17" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_name_tital"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_create_tital"
        android:layout_marginLeft="@dimen/font_25"
        android:layout_marginTop="@dimen/font_15"
        android:text="灵感辑名称"
        android:textColor="@color/bg_464646"
        android:textSize="@dimen/size_14" />


    <EditText
        android:id="@+id/et_name"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/tv_name_tital"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/bg_edittext"
        android:gravity="center_vertical"
        android:hint="输入灵感辑名称，不超过20个字"
        android:lines="1"
        android:paddingLeft="@dimen/font_10"
        android:singleLine="true"
        android:textColor="@color/bg_464646"
        android:textColorHint="@color/bg_b2b2b2"
        android:textCursorDrawable="@null"
        android:textSize="@dimen/size_14" />

    <TextView
        android:id="@+id/tv_name_miaosu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_name"
        android:layout_marginLeft="@dimen/font_25"
        android:layout_marginTop="@dimen/font_30"
        android:text="灵感辑描述"
        android:textColor="@color/bg_464646"
        android:textSize="@dimen/size_14" />

    <EditText
        android:id="@+id/et_miaosu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/rl_set_read_pic"
        android:layout_below="@+id/tv_name_miaosu"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/bg_edittext"
        android:gravity="top"
        android:hint="为什么创建这个灵感辑呢？"
        android:maxLength="3000"
        android:paddingLeft="@dimen/font_10"
        android:paddingTop="@dimen/font_6"
        android:textColor="@color/bg_464646"
        android:textColorHint="@color/bg_b2b2b2"
        android:textCursorDrawable="@null"
        android:textSize="@dimen/size_14" />

    <RelativeLayout
        android:id="@+id/rl_set_read_pic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/font_70"
        android:layout_marginTop="@dimen/font_30">

        <TextView
            android:id="@+id/tv_name_pic_set"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/font_25"
            android:layout_marginTop="@dimen/font_30"
            android:text="灵感辑默认展示样式"
            android:textColor="@color/bg_464646"
            android:textSize="@dimen/size_14" />

        <ImageView
            android:id="@+id/iv_icon_pubu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/font_15"
            android:paddingLeft="@dimen/font_5"
            android:src="@drawable/pubuliu" />

        <TextView
            android:id="@+id/tv_big_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/iv_icon_pubu"
            android:paddingLeft="@dimen/font_7"
            android:text="大图"
            android:textColor="@color/bg_464646"
            android:textSize="@dimen/size_14" />

        <RelativeLayout
            android:id="@+id/rl_radio_big"
            android:layout_width="@dimen/font_10"
            android:layout_height="@dimen/font_10"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/tv_big_name">

            <com.homechart.app.myview.RoundImageView
                android:id="@+id/riv_icon_back"
                android:layout_width="@dimen/font_10"
                android:layout_height="@dimen/font_10"
                android:background="@color/view_line" />

            <com.homechart.app.myview.RoundImageView
                android:id="@+id/riv_icon"
                android:layout_width="@dimen/font_8"
                android:layout_height="@dimen/font_8"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@color/white" />

        </RelativeLayout>


        <ImageView
            android:id="@+id/iv_icon_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/font_20"
            android:layout_toLeftOf="@+id/rl_radio_big"
            android:paddingLeft="@dimen/font_5"
            android:src="@drawable/changtu" />

        <TextView
            android:id="@+id/tv_small_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/iv_icon_list"
            android:paddingLeft="@dimen/font_7"
            android:text="小图"
            android:textColor="@color/bg_464646"
            android:textSize="@dimen/size_14" />

        <RelativeLayout
            android:id="@+id/rl_radio_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/tv_small_name">

            <com.homechart.app.myview.RoundImageView
                android:id="@+id/riv_icon_back1"
                android:layout_width="@dimen/font_10"
                android:layout_height="@dimen/font_10"
                android:visibility="gone"
                android:background="@color/view_line" />

            <com.homechart.app.myview.RoundImageView
                android:id="@+id/riv_icon1"
                android:layout_width="@dimen/font_8"
                android:layout_height="@dimen/font_8"
                android:layout_centerInParent="true"
                android:background="@color/bg_e79056" />

        </RelativeLayout>

    </RelativeLayout>


</RelativeLayout>
