<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_linggan"
        android:layout_width="@dimen/font_64"
        android:layout_height="@dimen/font_64"
        android:layout_marginLeft="@dimen/font_15"
        android:layout_marginTop="@dimen/font_2"
        android:scaleType="centerCrop"/>


    <EditText
        android:id="@+id/rt_linggan_content"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="2dp"
        android:background="@drawable/bg_edittext"
        android:gravity="top"
        android:maxLength="1000"
        android:hint="喜欢的理由，写下来如何？"
        android:paddingLeft="@dimen/font_10"
        android:paddingRight="@dimen/font_10"
        android:paddingTop="@dimen/font_12"
        android:textColor="@color/bg_464646"
        android:textColorHint="@color/bg_b2b2b2"
        android:textCursorDrawable="@null"
        android:textSize="@dimen/size_14"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_toRightOf="@+id/iv_linggan"/>


    <View
        android:id="@+id/view_below"
        android:layout_width="match_parent"
        android:background="@color/view_line"
        android:layout_below="@+id/rt_linggan_content"
        android:layout_marginLeft="@dimen/font_15"
        android:layout_marginRight="@dimen/font_15"
        android:layout_marginTop="@dimen/font_15"
        android:layout_height="1dp"/>


    <RelativeLayout
        android:id="@+id/rl_add_inspiration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/font_3"
        android:layout_below="@+id/view_below">

        <ImageView
            android:id="@+id/iv_icon_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/font_15"
            android:layout_marginTop="@dimen/font_17"
            android:layout_marginBottom="@dimen/font_17"
            android:src="@drawable/chuangjian"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/bg_8f8f8f"
            android:textSize="@dimen/size_14"
            android:layout_toRightOf="@+id/iv_icon_add"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/font_11"
            android:text="创建灵感辑"/>

    </RelativeLayout>


</RelativeLayout>
