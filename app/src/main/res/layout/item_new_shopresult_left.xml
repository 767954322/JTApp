<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/font_4"
    android:layout_marginRight="@dimen/font_4"
    android:layout_marginTop="@dimen/font_8"
    android:background="@color/white">

    <ImageView
        android:id="@+id/iv_image_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_tital"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_image_view"
        android:layout_marginTop="@dimen/font_8"
        android:lineSpacingExtra="@dimen/font_3"
        android:lines="2"
        android:maxLines="2"
        android:ellipsize="end"
        android:textColor="@color/bg_262626"
        android:textSize="@dimen/size_14" />

    <TextView
        android:id="@+id/tv_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_tital"
        android:layout_marginTop="@dimen/font_8"
        android:textColor="@color/bg_e79056"
        android:textSize="@dimen/size_14" />

    <RelativeLayout
        android:id="@+id/rl_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_price"
        android:layout_marginTop="@dimen/font_10"
        android:paddingBottom="@dimen/font_9"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_goto_buy"
            android:layout_width="@dimen/font_78"
            android:gravity="center"
            android:layout_height="@dimen/font_25"
            android:text="去购买"
            android:textColor="@color/bg_e79056"
            android:layout_alignParentLeft="true"
            android:background="@drawable/bg_goto_buy"/>

        <TextView
            android:id="@+id/tv_goto_shoucang"
            android:layout_width="@dimen/font_78"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_height="@dimen/font_25"
            android:background="@drawable/bt_login"
            android:text="收藏"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_goto_xiangsi"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignTop="@+id/iv_image_view"
        android:layout_alignBottom="@+id/rl_button"
        android:visibility="gone"
        android:background="@drawable/text_view_border">

        <com.homechart.app.myview.RoundImageView
            android:id="@+id/riv_goto_xiangsi"
            android:layout_width="@dimen/font_71"
            android:layout_height="@dimen/font_71"
            android:layout_centerInParent="true"
            android:background="@color/bg_e79056"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_centerInParent="true"
            android:textSize="@dimen/size_14"
            android:text="找相似"/>

    </RelativeLayout>

</RelativeLayout>
