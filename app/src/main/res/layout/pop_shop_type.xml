<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_pop_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/rl_pop_center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <com.homechart.app.myview.ShopTypeTagLayout
            android:id="@+id/his_flowLayout"
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="wrap_content"/>


        <Button
            android:id="@+id/bt_sure_type"
            android:layout_width="@dimen/font_90"
            android:layout_height="@dimen/font_30"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/font_20"
            android:background="@drawable/bt_login"
            android:layout_below="@+id/his_flowLayout"
            android:text="чбошод"
            android:textColor="@color/white" />


    </RelativeLayout>


    <View
        android:id="@+id/view_pop_bottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rl_pop_center" />

</RelativeLayout>
