<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/rl_bottom"
        android:orientation="vertical" />

    <RelativeLayout
        android:id="@+id/rl_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/font_49"
        android:layout_alignParentBottom="true"
        android:background="@drawable/tab_yinying">

        <RadioGroup
            android:id="@+id/rg_home_radio_group"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <!--图片-->
            <RadioButton
                android:id="@+id/radio_btn_pic"
                style="@style/main_tab_bottom"
                android:layout_marginBottom="@dimen/font_3"
                android:layout_marginTop="@dimen/font_7"
                android:checked="true"
                android:drawableTop="@drawable/pic_radio_select"
                android:gravity="bottom|center_horizontal"
                android:text="看图"
                android:textSize="@dimen/size_11" />

            <!--设计师-->
            <RadioButton
                android:id="@+id/radio_btn_faxian"
                style="@style/main_tab_bottom"
                android:layout_marginBottom="@dimen/font_3"
                android:layout_marginTop="@dimen/font_7"
                android:checked="true"
                android:drawableTop="@drawable/faxian_radio_select"
                android:gravity="bottom|center_horizontal"
                android:text="发现"
                android:textSize="@dimen/size_11" />

            <!--设计师-->
            <RadioButton
                android:id="@+id/radio_btn_designer"
                style="@style/main_tab_bottom"
                android:layout_marginBottom="@dimen/font_3"
                android:layout_marginTop="@dimen/font_7"
                android:checked="true"
                android:drawableTop="@drawable/shibie_radio_select"
                android:gravity="bottom|center_horizontal"
                android:text="识图"
                android:textSize="@dimen/size_11" />

            <RadioButton
                android:id="@+id/radio_btn_center"
                style="@style/main_tab_bottom"
                android:layout_marginBottom="@dimen/font_3"
                android:layout_marginTop="@dimen/font_7"
                android:checked="true"
                android:drawableTop="@drawable/center_radio_select"
                android:gravity="bottom|center_horizontal"
                android:text="我的"
                android:textSize="@dimen/size_11" />


        </RadioGroup>

        <View
            android:id="@+id/view_line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentTop="true"
            android:background="@color/view_line"
            android:visibility="gone" />
    </RelativeLayout>


</RelativeLayout>