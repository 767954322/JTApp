<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/rl_shop_tital"
        android:layout_width="match_parent"
        android:layout_height="@dimen/font_66"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_shop_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/tv_shop_miaosu"
            android:layout_marginRight="@dimen/font_15"
            android:textColor="@color/bg_e79056"
            android:textSize="@dimen/size_14" />

        <TextView
            android:id="@+id/tv_shop_miaosu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/font_15"
            android:layout_marginRight="@dimen/font_28"
            android:layout_toLeftOf="@+id/tv_shop_price"
            android:ellipsize="end"
            android:lines="2"
            android:textColor="@color/bg_262626"
            android:textSize="@dimen/size_13" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_details_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_shop_tital">

        <ImageView
            android:id="@+id/iv_details_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white" />

        <View
            android:id="@+id/view_below_image"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@id/iv_details_image" />

        <ImageView
            android:id="@+id/bt_shiwu2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_details_image"
            android:layout_alignRight="@+id/iv_details_image"
            android:layout_marginBottom="@dimen/font_15"
            android:layout_marginRight="@dimen/font_10"
            android:src="@drawable/tongkuan2"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/bt_shise2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/bt_shiwu2"
            android:layout_marginRight="@dimen/font_10"
            android:layout_toLeftOf="@+id/bt_shiwu2"
            android:src="@drawable/secai2"
            android:visibility="gone" />

    </RelativeLayout>

    <com.homechart.app.myview.FlowLayoutBiaoQian
        android:id="@+id/fl_tags_jubu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_details_image"
        android:layout_marginTop="@dimen/font_15"
        android:background="@color/white" />

    <RelativeLayout
        android:id="@+id/rl_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fl_tags_jubu"
        android:layout_marginTop="@dimen/font_15">

        <TextView
            android:id="@+id/tv_details_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/font_12"
            android:background="@color/white"
            android:textColor="@color/bg_8f8f8f"
            android:textSize="@dimen/font_12" />

        <TextView
            android:id="@+id/tv_from_where"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/font_5"
            android:layout_marginRight="@dimen/font_5"
            android:layout_toLeftOf="@+id/tv_goto_shop"
            android:layout_toRightOf="@+id/tv_details_time"
            android:background="@color/white"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/bg_262626"
            android:textSize="@dimen/font_12" />

        <TextView
            android:id="@+id/tv_goto_shop"
            android:layout_width="@dimen/font_60"
            android:layout_height="@dimen/font_29"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/font_12"
            android:background="@drawable/bt_guanzhu1"
            android:gravity="center"
            android:text="来源"
            android:textColor="@color/bg_707070"
            android:textSize="@dimen/font_12" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_user_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_time"
        android:layout_marginTop="@dimen/font_27">

        <com.homechart.app.myview.RoundImageView
            android:id="@+id/riv_people_header"
            android:layout_width="@dimen/font_40"
            android:layout_height="@dimen/font_40"
            android:layout_marginLeft="@dimen/font_12" />

        <RelativeLayout
            android:id="@+id/rl_album_tital"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/font_15"
            android:layout_toRightOf="@+id/riv_people_header">

            <TextView
                android:id="@+id/tv_people_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:textColor="@color/bg_262626"
                android:textSize="@dimen/size_14" />

            <TextView
                android:id="@+id/tv_from"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/font_10"
                android:layout_toRightOf="@+id/tv_people_name"
                android:text="上传至"
                android:textColor="@color/bg_8f8f8f"
                android:textSize="@dimen/size_12" />

            <TextView
                android:id="@+id/tv_album_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/font_10"
                android:layout_toRightOf="@+id/tv_from"
                android:textColor="@color/bg_262626"
                android:textSize="@dimen/size_14" />

        </RelativeLayout>

        <com.homechart.app.myview.ShangshabanChangeTextSpaceView
            android:id="@+id/tv_details_tital"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/rl_album_tital"
            android:layout_below="@+id/rl_album_tital"
            android:layout_marginRight="@dimen/font_12"
            android:layout_marginTop="@dimen/font_15"
            android:background="@color/white"
            android:lineSpacingExtra="@dimen/font_9"
            android:textColor="@color/bg_262626"
            android:textIsSelectable="true"
            android:textSize="@dimen/size_12" />

        <ImageView
            android:id="@+id/iv_more_album"
            android:layout_width="@dimen/font_36"
            android:layout_height="@dimen/font_36"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/tv_details_tital"
            android:layout_marginLeft="@dimen/font_8"
            android:layout_marginRight="@dimen/font_19"
            android:layout_marginTop="@dimen/font_20"
            android:background="@color/bg_f2f2f2"
            android:scaleType="centerInside"
            android:src="@drawable/next"
            android:visibility="gone" />

        <RelativeLayout
            android:id="@+id/rl_album_all"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/rl_album_tital"
            android:layout_below="@+id/tv_details_tital"
            android:layout_marginTop="@dimen/font_20"
            android:layout_toLeftOf="@+id/iv_more_album"
            android:visibility="gone">

            <RelativeLayout
                android:id="@+id/rl_images_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="@dimen/font_10"
                android:background="@drawable/bt_imgdetails_album">

                <ImageView
                    android:id="@+id/iv_img1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true" />

                <ImageView
                    android:id="@+id/iv_img2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true" />

                <ImageView
                    android:id="@+id/iv_img3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true" />

                <ImageView
                    android:id="@+id/iv_img4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_images_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/font_10"
                android:background="@drawable/bt_imgdetails_album">

                <ImageView
                    android:id="@+id/iv_img5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true" />

                <ImageView
                    android:id="@+id/iv_img6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true" />

                <ImageView
                    android:id="@+id/iv_img7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true" />

                <ImageView
                    android:id="@+id/iv_img8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_images_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="@dimen/font_10"
                android:background="@drawable/bt_imgdetails_album">

                <ImageView
                    android:id="@+id/iv_img9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true" />

                <ImageView
                    android:id="@+id/iv_img10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true" />

                <ImageView
                    android:id="@+id/iv_img11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true" />

                <ImageView
                    android:id="@+id/iv_img12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_header1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/rl_images_one"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/font_8">

                <com.homechart.app.myview.RoundImageView
                    android:id="@+id/riv_header_back1"
                    android:layout_width="@dimen/font_22"
                    android:layout_height="@dimen/font_22"
                    android:layout_centerInParent="true"
                    android:background="@color/white" />


                <com.homechart.app.myview.RoundImageView
                    android:id="@+id/riv_header_one"
                    android:layout_width="@dimen/font_20"
                    android:layout_height="@dimen/font_20"
                    android:layout_above="@+id/riv_header_back1"
                    android:layout_centerInParent="true" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_header2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/rl_images_two"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/font_8">

                <com.homechart.app.myview.RoundImageView
                    android:id="@+id/riv_header_back2"
                    android:layout_width="@dimen/font_22"
                    android:layout_height="@dimen/font_22"
                    android:layout_centerInParent="true"
                    android:background="@color/white" />


                <com.homechart.app.myview.RoundImageView
                    android:id="@+id/riv_header_two"
                    android:layout_width="@dimen/font_20"
                    android:layout_height="@dimen/font_20"
                    android:layout_above="@+id/riv_header_back2"
                    android:layout_centerInParent="true" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_header3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/rl_images_three"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/font_8">

                <com.homechart.app.myview.RoundImageView
                    android:id="@+id/riv_header_back3"
                    android:layout_width="@dimen/font_22"
                    android:layout_height="@dimen/font_22"
                    android:layout_centerInParent="true"
                    android:background="@color/white" />

                <com.homechart.app.myview.RoundImageView
                    android:id="@+id/riv_header_three"
                    android:layout_width="@dimen/font_20"
                    android:layout_height="@dimen/font_20"
                    android:layout_above="@+id/riv_header_back3"
                    android:layout_centerInParent="true" />
            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_pinglun"
        android:layout_width="@dimen/font_92"
        android:layout_height="@dimen/font_30"
        android:layout_marginLeft="@dimen/font_67"
        android:layout_marginBottom="@dimen/font_18"
        android:layout_marginTop="@dimen/font_15"
        android:background="@drawable/bt_guanzhu1"
        android:layout_below="@+id/rl_user_info"
        android:gravity="center_horizontal">


        <ImageView
            android:id="@+id/iv_pinglun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/pinglun" />

        <TextView
            android:id="@+id/tv_pinglun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/font_7"
            android:layout_toRightOf="@+id/iv_pinglun"
            android:textColor="@color/bg_707070"
            android:textSize="@dimen/size_12" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_pinglun"
        android:layout_marginTop="@dimen/font_7"
        android:background="@color/bg_f2f2f2">

        <TextView
            android:id="@+id/tv_maybe_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/font_15"
            android:layout_marginLeft="@dimen/font_10"
            android:layout_marginTop="@dimen/font_20"
            android:text="你可能还喜欢"
            android:textColor="@color/bg_8f8f8f"
            android:textSize="@dimen/size_14" />

    </RelativeLayout>


</RelativeLayout>
