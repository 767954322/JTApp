<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <View
        android:id="@+id/view_top"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/rl_bottom" />

    <RelativeLayout
        android:id="@+id/rl_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/font_12"
        android:layout_marginRight="@dimen/font_12"
        android:layout_marginBottom="@dimen/font_12"
        android:layout_alignParentBottom="true"
        android:background="@drawable/back_caiji">

        <RelativeLayout
            android:id="@+id/rl_xiangce"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/font_7">

            <ImageView
                android:id="@+id/iv_xiangce"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingTop="@dimen/font_20"
                android:paddingBottom="@dimen/font_20"
                android:layout_marginLeft="@dimen/font_30"
                android:src="@drawable/xiangcecaiji1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/font_22"
                android:layout_toRightOf="@+id/iv_xiangce"
                android:text="相册上传图片"
                android:textColor="@color/bg_464646"
                android:textSize="@dimen/size_14" />

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_paizhao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/rl_xiangce">

            <ImageView
                android:id="@+id/iv_paizhao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/font_30"
                android:paddingBottom="@dimen/font_21"
                android:paddingTop="@dimen/font_21"
                android:src="@drawable/shibiecaiji1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/font_22"
                android:layout_toRightOf="@+id/iv_paizhao"
                android:text="拍照上传图片"
                android:textColor="@color/bg_464646"
                android:textSize="@dimen/size_14" />

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_caiji"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_paizhao"
            android:paddingBottom="@dimen/font_6">

            <ImageView
                android:id="@+id/iv_icon_caiji"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingTop="@dimen/font_21"
                android:paddingBottom="@dimen/font_21"
                android:layout_marginLeft="@dimen/font_30"
                android:src="@drawable/lianjie1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/font_22"
                android:layout_toRightOf="@+id/iv_icon_caiji"
                android:text="网址采集图片"
                android:textColor="@color/bg_464646"
                android:textSize="@dimen/size_14" />

        </RelativeLayout>

    </RelativeLayout>
</RelativeLayout>
