<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clickable="true">

    <RelativeLayout
        android:id="@+id/common_navbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.homechart.app.myview.ClearEditText
            android:id="@+id/cet_clearedit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/font_27"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/font_8"
            android:layout_marginBottom="@dimen/font_8"
            android:background="@drawable/bg_edittext_search"
            android:drawablePadding="@dimen/font_6"
            android:paddingRight="@dimen/font_10"
            android:layout_marginLeft="@dimen/font_15"
            android:layout_marginRight="@dimen/font_15"
            android:gravity="center_vertical"
            android:clickable="false"
            android:enabled="false"
            android:lines="1"
            android:singleLine="true"
            android:focusable="false"
            android:ellipsize="end"
            android:layout_toLeftOf="@+id/iv_quxiao"
            android:paddingLeft="@dimen/font_10"
            android:textColorHint="@color/bg_8f8f8f"
            android:textSize="@dimen/size_14" />

        <ImageView
            android:id="@+id/iv_quxiao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/font_15"
            android:src="@drawable/quxiao_you" />

    </RelativeLayout>

    <ProgressBar
        android:id="@+id/pb_progress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="fill_parent"
        android:layout_height="2dip"
        android:layout_below="@+id/common_navbar"
        android:indeterminateOnly="false"
        android:max="100"
        android:progressDrawable="@drawable/progress_bar_states"
        android:visibility="gone" />

    <WebView
        android:id="@+id/wb_webview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/pb_progress"
        android:layerType="hardware" />
</RelativeLayout>