<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <include
        android:id="@+id/common_navbar"
        layout="@layout/view_navigation_header" />

    <RelativeLayout
        android:id="@+id/rl_image_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/font_70"
        android:layout_alignParentBottom="true"
        android:background="@color/bg_8f8f8f">

    </RelativeLayout>

    <com.homechart.app.imagedetail.PhotoView
        android:id="@+id/pv_Image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/bg_4d000000"
        android:layout_below="@+id/common_navbar"
        android:layout_above="@+id/rl_image_bottom"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

</RelativeLayout>