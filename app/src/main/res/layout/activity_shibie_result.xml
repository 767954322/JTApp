<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <include
        android:id="@+id/common_navbar"
        layout="@layout/view_navigation_header" />

    <RelativeLayout
        android:id="@+id/rl_image_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/font_50"
        android:layout_alignParentBottom="true"
        android:background="@color/bg_8f8f8f">

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/fl_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/rl_image_bottom"
        android:layout_below="@+id/common_navbar"
        android:background="@color/bg_4d000000"
        android:gravity="center">


        <com.homechart.app.croplayout.NewEditPhotoViewMore xmlns:crop="http://schemas.android.com/apk/res-auto"
            android:id="@+id/photoedit_image_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/bg_f7f7f7"
            crop:crop_corner_color="@color/white"
            crop:crop_line_color="@color/touming"
            crop:crop_shadow_color="@color/bg_4d000000" />

        <RelativeLayout
            android:id="@+id/rly_point"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/bg_4dfc7700"
            android:layout_centerInParent="true">

        </RelativeLayout>
    </RelativeLayout>


</RelativeLayout>