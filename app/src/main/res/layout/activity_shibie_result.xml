<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/rl_image_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/font_60"
        android:layout_alignParentBottom="true"
        android:background="@color/white">

        <TextView
            android:id="@+id/tv_fuwei"
            android:layout_width="@dimen/font_85"
            android:layout_height="@dimen/font_35"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/font_15"
            android:background="@drawable/bt_fuwei"
            android:gravity="center"
            android:text="重置"
            android:textColor="@color/bg_262626"
            android:textSize="@dimen/size_14"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_sousuo"
            android:layout_width="@dimen/font_85"
            android:layout_height="@dimen/font_35"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/font_15"
            android:background="@drawable/bt_sousuo_quxiao"
            android:gravity="center"
            android:text="搜索"
            android:textColor="@color/bg_8f8f8f"
            android:textSize="@dimen/size_14" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/fl_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/rl_image_bottom"
        android:background="@color/bg_4d000000"
        android:gravity="center">


        <com.homechart.app.croplayout.NewEditPhotoViewMore xmlns:crop="http://schemas.android.com/apk/res-auto"
            android:id="@+id/photoedit_image_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black"
            crop:crop_corner_color="@color/white"
            crop:crop_line_color="@color/touming"
            crop:crop_shadow_color="@color/bg_80000000" />

        <RelativeLayout
            android:id="@+id/rly_point"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true">

            <com.homechart.app.hotposition.NewImageLayout
                android:id="@+id/il_points"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </RelativeLayout>
    </RelativeLayout>


    <ImageButton
        android:id="@+id/nav_left_imageButton"
        android:layout_width="@dimen/size_40"
        android:layout_height="@dimen/size_40"
        android:layout_marginLeft="@dimen/size_10"
        android:layout_marginTop="@dimen/font_18"
        android:background="@drawable/transparent"
        android:padding="@dimen/size_8"
        android:scaleType="centerInside"
        android:src="@drawable/tital_back_wight"
        android:visibility="visible" />

    <TextView
        android:id="@+id/tv_toast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/font_30"
        android:paddingLeft="@dimen/font_20"
        android:paddingRight="@dimen/font_20"
        android:layout_centerHorizontal="true"
        android:paddingTop="@dimen/font_5"
        android:paddingBottom="@dimen/font_5"
        android:visibility="gone"
        android:background="@drawable/bt_toast_search"
        android:text="可自定义调整框的范围"
        android:textColor="@color/case_text_tital_name"
        android:textSize="@dimen/size_13" />

   <TextView
        android:id="@+id/tv_toast_click"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/font_30"
        android:paddingLeft="@dimen/font_20"
        android:paddingRight="@dimen/font_20"
        android:layout_centerHorizontal="true"
        android:paddingTop="@dimen/font_5"
        android:paddingBottom="@dimen/font_5"
        android:background="@drawable/bt_toast_search"
        android:text="点击图中橙色圆点"
        android:textColor="@color/case_text_tital_name"
        android:textSize="@dimen/size_13" />

</RelativeLayout>