<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/font_10">

    <ImageView
        android:id="@+id/iv_imageview_search_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/font_4"
        android:layout_marginRight="@dimen/font_4" />
    <RelativeLayout
        android:id="@+id/rl_shoucang_pic"
        android:layout_width="match_parent"
        android:layout_height="@dimen/font_28"
        android:background="@color/bg_4d000000"
        android:clickable="true"
        android:layout_alignLeft="@+id/iv_imageview_search_one"
        android:layout_alignRight="@+id/iv_imageview_search_one"
        android:layout_alignBottom="@+id/iv_imageview_search_one">

        <TextView
            android:id="@+id/tv_shoucang_num"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:paddingRight="@dimen/font_10"
            android:paddingLeft="@dimen/font_5"
            android:textColor="@color/white"
            android:textSize="@dimen/size_12" />

        <ImageView
            android:id="@+id/iv_if_shoucang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/tv_shoucang_num"
            android:src="@drawable/shoucang"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/iv_imageview_search_one"
        android:layout_below="@+id/iv_imageview_search_one"
        android:layout_marginBottom="@dimen/font_5"
        android:layout_marginTop="@dimen/font_10">

        <com.homechart.app.myview.RoundImageView
            android:id="@+id/iv_header_search"
            android:layout_width="@dimen/font_25"
            android:layout_height="@dimen/font_25"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/font_4" />

        <TextView
            android:id="@+id/tv_nikename_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/font_5"
            android:layout_toRightOf="@+id/iv_header_search"
            android:text="小明" />


        <com.homechart.app.myview.RoundImageView
            android:id="@+id/iv_color_right"
            android:layout_width="@dimen/font_10"
            android:layout_height="@dimen/font_10"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@color/bank_bg01" />


        <com.homechart.app.myview.RoundImageView
            android:id="@+id/iv_color_center"
            android:layout_width="@dimen/font_10"
            android:layout_height="@dimen/font_10"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/iv_color_right"
            android:background="@color/bank_bg01" />

        <com.homechart.app.myview.RoundImageView
            android:id="@+id/iv_color_left"
            android:layout_width="@dimen/font_10"
            android:layout_height="@dimen/font_10"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/iv_color_center"
            android:background="@color/bank_bg01" />
    </RelativeLayout>

</RelativeLayout>
