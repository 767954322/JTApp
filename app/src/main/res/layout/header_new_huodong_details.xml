<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <ImageView
        android:id="@+id/iv_huodong_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/font_15"
        android:layout_marginRight="@dimen/font_15"
        android:layout_marginTop="@dimen/font_15" />

    <RelativeLayout
        android:id="@+id/rl_tital_huodong"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_huodong_image"
        android:layout_marginTop="@dimen/font_20">

        <TextView
            android:id="@+id/tv_tital_huodong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/font_15"
            android:layout_marginRight="@dimen/font_15"
            android:includeFontPadding="false"
            android:textColor="@color/bg_262626"
            android:textSize="@dimen/size_18" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_data_last"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_tital_huodong"
        android:layout_marginTop="@dimen/font_15">

        <ImageView
            android:id="@+id/iv_data_last_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/font_15"
            android:src="@drawable/shijian" />

        <TextView
            android:id="@+id/tv_data_last"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/font_3"
            android:layout_toRightOf="@+id/iv_data_last_icon"
            android:textColor="@color/bg_e79056"
            android:textSize="@dimen/size_12" />


        <ImageView
            android:id="@+id/iv_data_last_icon1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/font_15"
            android:src="@drawable/shijian1" />

        <TextView
            android:id="@+id/tv_data_last1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/font_3"
            android:layout_toRightOf="@+id/iv_data_last_icon1"
            android:textColor="@color/bg_8f8f8f"
            android:textSize="@dimen/size_12" />
    </RelativeLayout>


    <TextView
        android:id="@+id/tv_huodong_miaoshu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_data_last"
        android:layout_marginLeft="@dimen/font_15"
        android:layout_marginRight="@dimen/font_15"
        android:layout_marginTop="@dimen/font_15"
        android:includeFontPadding="false"
        android:lineSpacingExtra="@dimen/font_9"
        android:textColor="@color/bg_707070"
        android:textSize="@dimen/size_14" />

    <RelativeLayout
        android:id="@+id/rl_zhankai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_huodong_miaoshu"
        android:layout_marginTop="@dimen/font_8"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_zhankai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/font_15"
            android:text="展开"
            android:textColor="@color/bg_8f8f8f"
            android:textSize="@dimen/size_14" />

        <ImageView
            android:id="@+id/iv_zhankai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/font_6"
            android:layout_toRightOf="@+id/tv_zhankai"
            android:src="@drawable/zhankai1" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl_center_perple"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/rl_zhankai"
        android:layout_marginTop="22dp">

        <RelativeLayout
            android:id="@+id/rl_people_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/font_15">


            <RelativeLayout
                android:id="@+id/rl_five"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="-6dp"
                android:layout_toRightOf="@+id/rl_four"
                android:gravity="center">

                <com.homechart.app.myview.RoundImageView
                    android:layout_width="@dimen/font_25"
                    android:layout_height="@dimen/font_25"
                    android:background="@drawable/red" />

                <com.homechart.app.myview.RoundImageView
                    android:id="@+id/riv_five"
                    android:layout_width="@dimen/font_23"
                    android:layout_height="@dimen/font_23"
                    android:layout_centerInParent="true" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_four"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="-6dp"
                android:layout_toRightOf="@+id/rl_three">

                <com.homechart.app.myview.RoundImageView
                    android:layout_width="@dimen/font_25"
                    android:layout_height="@dimen/font_25"
                    android:background="@drawable/red" />

                <com.homechart.app.myview.RoundImageView
                    android:id="@+id/riv_four"
                    android:layout_width="@dimen/font_23"
                    android:layout_height="@dimen/font_23"
                    android:layout_centerInParent="true" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="-6dp"
                android:layout_toRightOf="@+id/rl_two">

                <com.homechart.app.myview.RoundImageView
                    android:layout_width="@dimen/font_25"
                    android:layout_height="@dimen/font_25"
                    android:background="@drawable/red" />

                <com.homechart.app.myview.RoundImageView
                    android:id="@+id/riv_three"
                    android:layout_width="@dimen/font_23"
                    android:layout_height="@dimen/font_23"
                    android:layout_centerInParent="true" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="-6dp"
                android:layout_toRightOf="@+id/rl_one">

                <com.homechart.app.myview.RoundImageView
                    android:layout_width="@dimen/font_25"
                    android:layout_height="@dimen/font_25"
                    android:background="@drawable/red" />

                <com.homechart.app.myview.RoundImageView
                    android:id="@+id/riv_two"
                    android:layout_width="@dimen/font_23"
                    android:layout_height="@dimen/font_23"
                    android:layout_centerInParent="true" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true">

                <com.homechart.app.myview.RoundImageView
                    android:layout_width="@dimen/font_25"
                    android:layout_height="@dimen/font_25"
                    android:background="@drawable/red" />

                <com.homechart.app.myview.RoundImageView
                    android:id="@+id/riv_one"
                    android:layout_width="@dimen/font_23"
                    android:layout_height="@dimen/font_23"
                    android:layout_centerInParent="true" />

            </RelativeLayout>

            <View
                android:id="@+id/view_num_perple"
                android:layout_width="@dimen/font_1"
                android:layout_height="@dimen/font_12"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/font_10"
                android:layout_marginRight="@dimen/font_10"
                android:layout_toRightOf="@+id/rl_five"
                android:background="@color/bg_8f8f8f" />

            <TextView
                android:id="@+id/tv_show_num_people"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/view_num_perple"
                android:textColor="@color/bg_8f8f8f"
                android:textSize="@dimen/size_12" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_no_people"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/font_15"
            android:text="等你来参与"
            android:textColor="@color/bg_8f8f8f"
            android:textSize="@dimen/size_12"
            android:visibility="gone" />

    </RelativeLayout>


    <ImageView
        android:id="@+id/iv_huodong_start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_center_perple"
        android:layout_marginTop="@dimen/font_40" />

    <RelativeLayout
        android:id="@+id/rl_jiangpin_tital"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_huodong_start"
        android:layout_marginBottom="@dimen/font_27"
        android:layout_marginTop="@dimen/font_40">

        <com.homechart.app.myview.RoundImageView
            android:layout_width="@dimen/font_5"
            android:layout_height="@dimen/font_5"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/font_6"
            android:layout_toLeftOf="@+id/tv_jiangpin_tital"
            android:background="@color/view_line" />

        <com.homechart.app.myview.RoundImageView
            android:layout_width="@dimen/font_5"
            android:layout_height="@dimen/font_5"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/font_6"
            android:layout_toRightOf="@+id/tv_jiangpin_tital"
            android:background="@color/view_line" />

        <TextView
            android:id="@+id/tv_jiangpin_tital"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="奖品介绍"
            android:textColor="@color/bg_464646"
            android:textSize="@dimen/size_16" />


    </RelativeLayout>

    <com.homechart.app.myview.MyListView
        android:id="@+id/lv_jiangpin_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@null"
        android:layout_below="@+id/rl_jiangpin_tital"/>

    <RelativeLayout
        android:id="@+id/rl_lingganji_tital"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lv_jiangpin_list"
        android:layout_marginBottom="@dimen/font_17"
        android:layout_marginTop="@dimen/font_40">

        <com.homechart.app.myview.RoundImageView
            android:layout_width="@dimen/font_5"
            android:layout_height="@dimen/font_5"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/font_6"
            android:layout_toLeftOf="@+id/tv_lingganji_tital"
            android:background="@color/view_line" />

        <com.homechart.app.myview.RoundImageView
            android:layout_width="@dimen/font_5"
            android:layout_height="@dimen/font_5"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/font_6"
            android:layout_toRightOf="@+id/tv_lingganji_tital"
            android:background="@color/view_line" />

        <TextView
            android:id="@+id/tv_lingganji_tital"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="活动灵感辑展示"
            android:textColor="@color/bg_464646"
            android:textSize="@dimen/size_16" />


    </RelativeLayout>

</RelativeLayout>