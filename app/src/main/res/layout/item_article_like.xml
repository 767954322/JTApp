<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_item_click"
    android:layout_width="match_parent"
    android:layout_height="@dimen/font_110">

    <ImageView
        android:id="@+id/iv_article_image"
        android:layout_width="@dimen/font_105"
        android:layout_height="@dimen/font_80"
        android:layout_marginTop="@dimen/font_15"
        android:layout_marginLeft="@dimen/font_15"
        android:scaleType="centerCrop" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/view_line"
        android:layout_marginLeft="@dimen/font_15"
        android:layout_marginRight="@dimen/font_15"
        android:layout_alignParentBottom="true"/>

    <TextView
        android:id="@+id/tv_article_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/font_15"
        android:layout_marginRight="@dimen/font_15"
        android:layout_marginTop="@dimen/font_18"
        android:layout_toRightOf="@+id/iv_article_image"
        android:ellipsize="end"
        android:gravity="top"
        android:lineSpacingExtra="@dimen/font_3"
        android:maxLines="1"
        android:text="dsdsds"
        android:textColor="@color/bg_262626"
        android:textSize="@dimen/font_14" />

    <TextView
        android:id="@+id/tv_article_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/font_15"
        android:layout_marginRight="@dimen/font_15"
        android:layout_marginTop="@dimen/font_7"
        android:gravity="top"
        android:layout_below="@+id/tv_article_name"
        android:layout_toRightOf="@+id/iv_article_image"
        android:ellipsize="end"
        android:lineSpacingExtra="@dimen/font_3"
        android:maxLines="1"
        android:text="dsdsds"
        android:textColor="@color/bg_8f8f8f"
        android:textSize="@dimen/font_14" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/font_19"
        android:layout_marginRight="@dimen/font_15"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_see_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/liulan" />

        <TextView
            android:id="@+id/tv_youlan_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/font_5"
            android:layout_toRightOf="@+id/iv_see_num"
            android:text="0"
            android:textColor="@color/bg_262626"
            android:textSize="@dimen/font_12" />

    </RelativeLayout>

</RelativeLayout>
