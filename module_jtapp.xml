<?xml version="1.0" encoding="UTF-8"?>
<project name="module_jtapp" default="compile.module.jtapp">
  <dirname property="module.jtapp.basedir" file="${ant.file.module_jtapp}"/>
  
  <property name="module.jdk.home.jtapp" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.jtapp" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.jtapp" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.jtapp" value="-encoding UTF-8 -source 1.7 -target 1.7 ${compiler.args}"/>
  
  <property name="jtapp.output.dir" value="${module.jtapp.basedir}/build/classes/production/JTApp"/>
  <property name="jtapp.testoutput.dir" value="${module.jtapp.basedir}/build/classes/test/JTApp"/>
  
  <path id="jtapp.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="jtapp.module.production.classpath">
    <path refid="${module.jdk.classpath.jtapp}"/>
  </path>
  
  <path id="jtapp.runtime.production.module.classpath">
    <pathelement location="${jtapp.output.dir}"/>
  </path>
  
  <path id="jtapp.module.classpath">
    <path refid="${module.jdk.classpath.jtapp}"/>
    <pathelement location="${jtapp.output.dir}"/>
  </path>
  
  <path id="jtapp.runtime.module.classpath">
    <pathelement location="${jtapp.testoutput.dir}"/>
    <pathelement location="${jtapp.output.dir}"/>
  </path>
  
  
  <patternset id="excluded.from.module.jtapp">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.jtapp">
    <patternset refid="excluded.from.module.jtapp"/>
  </patternset>
  
  
  <target name="compile.module.jtapp" depends="compile.module.jtapp.production,compile.module.jtapp.tests" description="Compile module JTApp"/>
  
  <target name="compile.module.jtapp.production" depends="register.custom.compilers" description="Compile module JTApp; production classes"/>
  
  <target name="compile.module.jtapp.tests" depends="register.custom.compilers,compile.module.jtapp.production" description="compile module JTApp; test classes" unless="skip.tests"/>
  
  <target name="clean.module.jtapp" description="cleanup module">
    <delete dir="${jtapp.output.dir}"/>
    <delete dir="${jtapp.testoutput.dir}"/>
  </target>
</project>